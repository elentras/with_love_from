= form_for(@profile) do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile.errors.count, "error")
        prohibited this profile from being saved:
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :height
    %br/
    = f.number_field :height
  .field
    = f.label :weight
    %br/
    = f.number_field :weight
  .field
    = f.label :eyes_color
    %br/
    = f.text_field :eyes_color
  .field
    = f.label :hair_color
    %br/
    = f.text_field :hair_color
  .field
    = f.label :morphology
    %br/
    = f.text_field :morphology
  .field
    = f.label :hobbies
    %br/
    = f.text_field :hobbies
  .field
    = f.label :looking_for
    %br/
    = f.text_field :looking_for
  .field
    = f.label :birth_date
    %br/
    = f.date_select :birth_date
  .field
    = f.label :style
    %br/
    = f.text_field :style
  .field
    = f.label :life_style
    %br/
    = f.text_field :life_style
  .field
    = f.label :ethny
    %br/
    = f.text_field :ethny
  .field
    = f.label :alcool_level
    %br/
    = f.text_field :alcool_level
